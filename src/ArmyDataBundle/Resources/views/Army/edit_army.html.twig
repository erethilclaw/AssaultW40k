{% extends "base.html.twig" %}
{% block title %}{{ 'army.edt'|trans }}{% endblock %}
    {% block page_content %}
        <!-- Page Content -->
        <div class="col-md-6 col-lg-6 col-sm-6 col-lg-offset-3 col-md-offset-3 col-sm-offset-3">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">{{ 'army.edt'|trans }}</h3><br>
                    <a href="{{ path('army_index') }}">{{ 'generic.list'|trans }}</a>
                </div>
                {{ form_start(edit_form,{'attr': {'role': 'form'}}) }}
                {{ form_errors(edit_form) }}
                <div class="box-body">
                    <div class="form-group ">
                        {{ form_label(edit_form.name) }}
                        {{ form_errors(edit_form.name) }}
                        {{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group ">
                        {{ form_row(edit_form.image) }}
                    </div>
                </div>
                <div class="box-footer">
                    <button class="btn btn-primary" type="submit">{{ 'army.edt'|trans }}</button>
                </div>
                {{ form_end(edit_form) }}
            </div>
        </div>
        <!-- /.container -->
    {% endblock %}
{% block leng %}
    {% set locale = app.request.locale %}
    <li class="Button">
        <a href="{{ path(app.request.attributes.get('_route'), { _locale: 'en', 'id':army.id }) }}">
            {% if locale == 'en' %}
                <img src="{{ asset('dist/img/eng_flag.png') }}"/>
            {% else %}
                <img src="{{ asset('dist/img/eng_bw_flag.png') }}">
            {% endif %}
        </a>
    </li>
    <li>
        <a href="{{ path(app.request.attributes.get('_route'), { _locale: 'es', 'id':army.id  }) }}">
            {% if locale == 'es' %}
                <img src="{{ asset('dist/img/es_flag.png') }}">
            {% else %}
                <img src="{{ asset('dist/img/es_bw_flag.png') }}">
            {% endif %}
        </a>
    </li>
{% endblock %}
