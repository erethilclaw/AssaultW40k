{% extends "base.html.twig" %}
{% block title %}{{ 'army.new'|trans }}{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $('#army').addClass('active');
        });
    </script>
{% endblock %}
    {% block page_content %}
        {% form_theme form 'ArmyDataBundle:Error:form_errors.html.twig' %}
        <!-- Page Content -->
        <div class="col-md-6 col-lg-6 col-sm-6 col-lg-offset-3 col-md-offset-3 col-sm-offset-3">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">{{ 'army.new'|trans }}</h3><br>
                    <a href="{{ path('army_index') }}">{{ 'generic.list'|trans }}</a>
                </div>
                {{ form_start(form,{'attr': {'role': 'form'}}) }}
                <div class="box-body">
                    <div class="form-group form_row">
                        {{ form_label(form.name) }}
                        {{ form_errors(form.name) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group ">
                        {{ form_label(form.image) }}
                        {{ form_errors(form.image) }}
                        {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="box-footer">
                    <button class="btn btn-primary" type="submit">{{ 'army.add'|trans }}</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
        <!-- /.container -->
    {% endblock %}

