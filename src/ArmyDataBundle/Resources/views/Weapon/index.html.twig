{% extends "base.html.twig" %}
{% block title %}{{ "weapon.title"|trans }}{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <!-- DataTables -->
    <script src="{{ asset('plugins/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('plugins/datatables/dataTables.bootstrap.min.js') }}"></script>
    <!-- page script -->
    <script>
        $(function () {
            $("#example1").DataTable();
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false
            });
        });
        {#$(document).ready(function() {#}
        {#$("#eliminar").mousedown(function () {#}
        {#var checkstr =  confirm('are you sure you want to delete this?');#}
        {#if(checkstr == true){#}
        {#{{ path('destinatari_delete', {  'id':destinatari.id }) }}#}
        {#}else{#}
        {#return false;#}
        {#}#}
        {#});#}
        {#});#}

    </script>
{% endblock %}
    {% block page_content %}
        <!-- Page Content -->
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h4 class="box-title">{{ 'weapon.title'|trans }}</h4><br>
                    <a href="{{ path('wp_add') }}">{{ 'weapon.add'|trans }}</a>
                </div>
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover table-striped">
                        <thead>
                        <tr>
                            <th><i class="glyphicon glyphicon-user"></i>{{ 'weapon.title'|trans }}</th>
                            <th>{{ 'weapon.rg'|trans }}</th>
                            <th>F</th>
                            <th>FP</th>
                            <th>{{ 'weapon.tp'|trans }}</th>
                            <th>{{ 'weapon.st'|trans }}</th>
                            <th>{{ 'unit.title'|trans }}</th>
                            <th>{{ 'army.title'|trans }}</th>
                            {% if is_granted('ROLE_ADMIN') %}
                                <th><i class="glyphicon glyphicon-wrench"></i>{{ 'generic.act'|trans }}</th>
                            {% endif %}
                        </tr>
                        </thead>
                        <tbody>
                        {% for weapon in weapons %}
                            <tr>
                                <td>
                                    <a href="{{ path('wp_show', {  'id':weapon.id }) }}">{{ weapon.name }}</a>
                                </td>
                                <td>
                                    <a href="{{ path('wp_show', {  'id':weapon.id }) }}">{{ weapon.distance }}</a>
                                </td>
                                <td>
                                    <a href="{{ path('wp_show', {  'id':weapon.id }) }}">{{ weapon.f }}</a>
                                </td>
                                <td>
                                    <a href="{{ path('wp_show', {  'id':weapon.id }) }}">{{ weapon.fp }}</a>
                                </td>
                                <td>
                                    <a href="{{ path('wp_show', {  'id':weapon.id }) }}">{{ weapon.type }}</a>
                                </td>
                                <td>
                                    <a href="{{ path('wp_show', {  'id':weapon.id }) }}">{{ weapon.shoots }}</a>
                                </td>
                                <td>
                                    {% for unit in weapon.units %}
                                        <ul>{{ unit.name }}</ul>
                                    {% endfor %}
                                </td>
                                <td>
                                    {% for army in weapon.armies %}
                                        <ul>{{ army.name }}</ul>
                                        {% endfor %}
                                </td>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <td>
                                        <a href=" {{ path('wp_edit', { 'id':weapon.id }) }}"><span
                                                    class="glyphicon glyphicon-pencil"></span>{{ 'generic.edt'|trans }}</a><br>
                                        <a href="{{ path('wp_delete', { 'id':weapon.id }) }}" onclick="
return confirm('{{ 'weapon.delMsg'|trans }}')"><span
                                                    class="glyphicon glyphicon-trash" id="eliminar"></span>{{ 'generic.del'|trans }}</a>
                                    </td>
                                {% endif %}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /.container -->
    {% endblock %}
