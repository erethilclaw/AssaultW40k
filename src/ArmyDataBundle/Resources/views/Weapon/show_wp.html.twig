{% extends "base.html.twig" %}
{% block title %}{{ 'weapon.show'|trans }}{% endblock %}
    {% block page_content %}
        <!-- Page Content -->
        <div class="col-md-6 col-lg-6 col-sm-6 col-lg-offset-3 col-md-offset-3 col-sm-offset-3">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">{{ weapon.name }}</h3><br>
                    <a href="{{ path('wp_index') }}">{{ 'weapon.title'|trans }}</a><br>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12 col-lg-12 col-sm-12">
                            <table id="example2" class="table table-bordered table-hover table-striped">
                                <thead>
                                <tr>
                                    <th>range</th>
                                    <th>F</th>
                                    <th>FP</th>
                                    <th>Type</th>
                                    <th>Shoots</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td>
                                        {{ weapon.distance }}
                                    </td>
                                    <td>
                                        {{ weapon.f }}
                                    </td>
                                    <td>
                                        {{ weapon.fp }}
                                    </td>
                                    <td>
                                        {{ weapon.type }}
                                    </td>
                                    <td>
                                        {{ weapon.shoots }}
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-6 col-lg-6 col-sm-6">
                            <h4 class="box-body">{{ 'army.title'|trans }}</h4>
                            <ul>
                                {% for army in weapon.armies %}
                                    <li>
                                        <a href="{{ path('army_show', {  'id':army.id }) }}">{{ army.name }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="col-md-6 col-lg-6 col-sm-6">
                            <h4 class="box-body">{{ 'unit.title'|trans }}</h4>
                            <ul>
                                {% for unit in weapon.units %}
                                    <li>
                                        <a href="{{ path('unit_show', {  'id':unit.id }) }}">{{ unit.name }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('wp_edit', { 'id':weapon.id }) }}"><span
                                class="glyphicon glyphicon-pencil"></span>{{ 'generic.edt'|trans }}</a> <br>
                    <a href="{{ path('wp_delete', { 'id':weapon.id }) }}" onclick="
                            return confirm('{{ 'weapon.delMsg'|trans }}')">
                        <button class="btn btn-danger">{{ 'generic.del'|trans }}</button>
                    </a>
                {% endif %}
            </div>
        </div>
        </div>

        <!-- /.container -->
    {% endblock %}
{% block leng %}
    {% set locale = app.request.locale %}
    <li class="Button">
        <a href="{{ path(app.request.attributes.get('_route'), { _locale: 'en', 'id':weapon.id }) }}">
            {% if locale == 'en' %}
                <img src="{{ asset('dist/img/eng_flag.png') }}"/>
            {% else %}
                <img src="{{ asset('dist/img/eng_bw_flag.png') }}">
            {% endif %}
        </a>
    </li>
    <li>
        <a href="{{ path(app.request.attributes.get('_route'), { _locale: 'es', 'id':weapon.id  }) }}">
            {% if locale == 'es' %}
                <img src="{{ asset('dist/img/es_flag.png') }}">
            {% else %}
                <img src="{{ asset('dist/img/es_bw_flag.png') }}">
            {% endif %}
        </a>
    </li>
{% endblock %}
