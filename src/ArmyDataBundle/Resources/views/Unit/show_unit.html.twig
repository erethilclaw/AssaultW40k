{% extends "base.html.twig" %}
{% block title %}{{ 'unit.show'|trans }}{% endblock %}
    {% block page_content %}
        <!-- Page Content -->
        <div class="col-md-6 col-lg-6 col-sm-6 col-lg-offset-3 col-md-offset-3 col-sm-offset-3">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">{{ 'unit.show'|trans }}</h3><br>
                    <a href="{{ path('unit_index') }}">{{ 'unit.title'|trans }}</a><br>
                </div>
                <div class="box-body">
                    <h4 class="box-body">{{ 'army.nam'|trans }} : {{ unit.army }}</h4>
                    <table id="example2" class="table table-bordered table-hover table-striped">
                        <thead>
                        <tr>
                            <th><i class="glyphicon glyphicon-user"></i></th>
                            <th>{{ 'unit.ha'|trans }}</th>
                            <th>{{ 'unit.hp'|trans }}</th>
                            <th>{{ 'unit.f'|trans }}</th>
                            <th>{{ 'unit.r'|trans }}</th>
                            <th>{{ 'unit.h'|trans }}</th>
                            <th>{{ 'unit.a'|trans }}</th>
                            <th>{{ 'unit.i'|trans }}</th>
                            <th>{{ 'unit.l'|trans }}</th>
                            <th>{{ 'unit.s'|trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>
                                {{ unit.name }}
                            </td>
                            <td>
                                {{ unit.Ha }}
                            </td>
                            <td>
                                {{ unit.Hp }}
                            </td>
                            <td>
                                {{ unit.F }}
                            </td>
                            <td>
                                {{ unit.R }}
                            </td>
                            <td>
                                {{ unit.H }}
                            </td>
                            <td>
                                {{ unit.I }}
                            </td>
                            <td>
                                {{ unit.A }}
                            </td>
                            <td>
                                {{ unit.L }}
                            </td>
                            <td>
                                {{ unit.S }}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                     <h4 class="box-body">{{ 'weapon.title'|trans }}</h4>
                     <ul>
                         {% for weapon in unit.weapons %}
                             <li>
                                 <a href="{{ path('wp_show', {  'id':weapon.id }) }}">{{ weapon.name }}</a>
                             </li>
                         {% endfor %}
                     </ul>
                </div>
                <div class="box-footer">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('unit_edit', { 'id':unit.id }) }}"><span
                                    class="glyphicon glyphicon-pencil"></span>{{ 'generic.edt'|trans }}</a> <br>
                        <a href="{{ path('unit_delete', { 'id':unit.id }) }}" onclick="
                                return confirm('{{ 'unit.delMsg'|trans }}')">
                            <button class="btn btn-danger">{{ 'generic.del'|trans }}</button>
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
        <!-- /.container -->
    {% endblock %}
{% block leng %}
    {% set locale = app.request.locale %}
    <li class="Button">
        <a href="{{ path(app.request.attributes.get('_route'), { _locale: 'en', 'id':unit.id }) }}">
            {% if locale == 'en' %}
                <img src="{{ asset('dist/img/eng_flag.png') }}"/>
            {% else %}
                <img src="{{ asset('dist/img/eng_bw_flag.png') }}">
            {% endif %}
        </a>
    </li>
    <li>
        <a href="{{ path(app.request.attributes.get('_route'), { _locale: 'es', 'id':unit.id  }) }}">
            {% if locale == 'es' %}
                <img src="{{ asset('dist/img/es_flag.png') }}">
            {% else %}
                <img src="{{ asset('dist/img/es_bw_flag.png') }}">
            {% endif %}
        </a>
    </li>
{% endblock %}