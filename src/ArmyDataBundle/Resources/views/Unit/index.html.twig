{% extends "base.html.twig" %}
{% block title %}{{ "unit.title"|trans }}{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <!-- DataTables -->
    <script src="{{ asset('plugins/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('plugins/datatables/dataTables.bootstrap.min.js') }}"></script>
    <!-- page script -->
    <script>
        $(function () {
            $("#example1").DataTable();
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false
            });
        });
        {#$(document).ready(function() {#}
        {#$("#eliminar").mousedown(function () {#}
        {#var checkstr =  confirm('are you sure you want to delete this?');#}
        {#if(checkstr == true){#}
        {#{{ path('destinatari_delete', {  'id':destinatari.id }) }}#}
        {#}else{#}
        {#return false;#}
        {#}#}
        {#});#}
        {#});#}

    </script>
{% endblock %}
    {% block page_content %}
        <!-- Page Content -->
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h4 class="box-title">{{ 'unit.title'|trans }}</h4><br>
                    <a href="{{ path('unit_add') }}">{{ 'unit.add'|trans }}</a>
                </div>
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover table-striped">
                        <thead>
                        <tr>
                            <th><i class="glyphicon glyphicon-user"></i></th>
                            <th>HA</th>
                            <th>HP</th>
                            <th>F</th>
                            <th>R</th>
                            <th>H</th>
                            <th>I</th>
                            <th>A</th>
                            <th>L</th>
                            <th>S</th>
                            <th>{{ 'navbar.army'|trans }}</th>
                            {% if is_granted('ROLE_ADMIN') %}
                                <th><i class="glyphicon glyphicon-wrench"></i>{{ 'generic.act'|trans }}</th>
                            {% endif %}
                        </tr>
                        </thead>
                        <tbody>
                        {% for unit in units %}
                            <tr>
                                <td>
                                    <a href="{{ path('unit_show', {  'id':unit.id }) }}">{{ unit.name }}</a>
                                </td>

                                <td><a href="{{ path('unit_show', {  'id':unit.id }) }}">
                                        {{ unit.Ha }}</a>
                                </td>
                                <td><a href="{{ path('unit_show', {  'id':unit.id }) }}">
                                        {{ unit.Hp }}</a>
                                </td>
                                <td><a href="{{ path('unit_show', {  'id':unit.id }) }}">
                                        {{ unit.F }}</a>
                                </td>
                                <td><a href="{{ path('unit_show', {  'id':unit.id }) }}">
                                        {{ unit.R }}</a>
                                </td>
                                <td><a href="{{ path('unit_show', {  'id':unit.id }) }}">
                                        {{ unit.H }}</a>
                                </td>
                                <td><a href="{{ path('unit_show', {  'id':unit.id }) }}">
                                        {{ unit.I }}</a>
                                </td>
                                <td><a href="{{ path('unit_show', {  'id':unit.id }) }}">
                                        {{ unit.A }}</a>
                                </td>
                                <td><a href="{{ path('unit_show', {  'id':unit.id }) }}">
                                        {{ unit.L }}</a>
                                </td>
                                <td><a href="{{ path('unit_show', {  'id':unit.id }) }}">
                                        {{ unit.S }}</a>
                                </td>
                                <td><a href="{{ path('army_show', {  'id':unit.army.id }) }}">
                                        {{ unit.army }}</a>
                                </td>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <td>
                                        <a href=" {{ path('unit_edit', { 'id':unit.id }) }}"><span
                                                    class="glyphicon glyphicon-pencil"></span>{{ 'generic.edt'|trans }}</a><br>
                                        <a href="{{ path('unit_delete', { 'id':unit.id }) }}" onclick="
return confirm('¿Estas segur que vols eliminar el destinatari?')"><span
                                                    class="glyphicon glyphicon-trash" id="eliminar"></span>{{ 'generic.del'|trans }}</a>
                                    </td>
                                {% endif %}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /.container -->
    {% endblock %}
    {% block leng %}
        {% set locale = app.request.locale %}
                {% if locale == 'es' %}
                    <span>Español</span>
                    <a href="{{ path('unit_index', { _locale: 'en' }) }}">English</a>
                {% elseif locale == 'en' %}
                    <a href="{{ path('unit_index', { _locale: 'es' }) }}">Español</a>
                    <span>English</span>
                {% endif %}
    {% endblock %}