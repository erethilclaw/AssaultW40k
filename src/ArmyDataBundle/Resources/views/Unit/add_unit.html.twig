                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <button class="btn btn-primary" type="submit">{{ 'unit.add'|trans }}</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
        <!-- /.container -->
    {% endblock %}

