{% extends "base.html.twig" %}
{% block title %}{{ 'unit.new'|trans }}{% endblock %}
    {% block page_content %}
        <!-- Page Content -->
        <div class="col-md-6 col-lg-6 col-sm-6 col-lg-offset-3 col-md-offset-3 col-sm-offset-3">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">{{ 'unit.new'|trans }}</h3><br>
                    <a href="{{ path('unit_index') }}">{{ 'generic.list'|trans }}</a>
                </div>
                {{ form_start(form,{'attr': {'role': 'form'}}) }}
                {{ form_errors(form) }}
                <div class="box-body">
                    <div class="form-group ">
                        {{ form_label(form.name) }}
                        {{ form_errors(form.name) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="row">
                        <div class="form-group  col-md-3 col-lg-3 col-sm-3 col-xs-3 ">
                            {{ form_label(form.ha) }}
                            {{ form_errors(form.ha) }}
                            {{ form_widget(form.ha, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group  col-md-3 col-lg-3 col-sm-3 col-xs-3 ">
                            {{ form_label(form.hp) }}
                            {{ form_errors(form.hp) }}
                            {{ form_widget(form.hp, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group  col-md-3 col-lg-3 col-sm-3 col-xs-3 ">
                            {{ form_label(form.f) }}
                            {{ form_errors(form.f) }}
                            {{ form_widget(form.f, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group  col-md-3 col-lg-3 col-sm-3 col-xs-3 ">
                            {{ form_label(form.r) }}
                            {{ form_errors(form.r) }}
                            {{ form_widget(form.r, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group  col-md-3 col-lg-3 col-sm-3 col-xs-3 ">
                            {{ form_label(form.h) }}
                            {{ form_errors(form.h) }}
                            {{ form_widget(form.h, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group  col-md-3 col-lg-3 col-sm-3 col-xs-3 ">
                            {{ form_label(form.i) }}
                            {{ form_errors(form.i) }}
                            {{ form_widget(form.i, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group  col-md-3 col-lg-3 col-sm-3 col-xs-3 ">
                            {{ form_label(form.a) }}
                            {{ form_errors(form.a) }}
                            {{ form_widget(form.a, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group  col-md-3 col-lg-3 col-sm-3 col-xs-3 ">
                            {{ form_label(form.l) }}
                            {{ form_errors(form.l) }}
                            {{ form_widget(form.l, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group  col-md-3 col-lg-3 col-sm-3 col-xs-3 ">
                            {{ form_label(form.s) }}
                            {{ form_errors(form.s) }}
                            {{ form_widget(form.s, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group  col-md-3 col-lg-3 col-sm-3 col-xs-3 ">
                            {{ form_label(form.army) }}
                            {{ form_errors(form.army) }}
                            {{ form_widget(form.army, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <button class="btn btn-primary" type="submit">{{ 'unit.add'|trans }}</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
        <!-- /.container -->
    {% endblock %}
    {% block leng %}
        {% set locale = app.request.locale %}
        {% if locale == 'es' %}
            <span>Español</span>
            <a href="{{ path('unit_add', { _locale: 'en' }) }}">English</a>
        {% elseif locale == 'en' %}
            <a href="{{ path('unit_add', { _locale: 'es' }) }}">Español</a>
            <span>English</span>
        {% endif %}
    {% endblock %}
