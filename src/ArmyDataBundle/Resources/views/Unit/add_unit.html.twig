                        </div>
                        <div class="form-group col-md-3 col-lg-3 col-sm-3 col-xs-3">
                            <label>{{ 'weapon.add'|trans }}</label>
                            {{ form_label(form.weapons) }}
                            <ul class="weapons"
                                data-prototype="{{ form_widget(form.weapons.vars.prototype)|e }}">
